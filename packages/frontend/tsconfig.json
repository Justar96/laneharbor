{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022", "DOM"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "types": ["node", "@remix-run/node", "@remix-run/react"],
    "noEmit": true,
    "allowImportingTsExtensions": true
  },
  "include": ["app", "remix.env.d.ts", "server.*", "vite.*", "remix.*"]
}
