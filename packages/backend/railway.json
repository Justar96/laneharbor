{
  "$schema": "https://railway.app/railway.schema.json",
  "name": "laneharbor-backend",
  "build": {
    "builder": "NIXPACKS"
  },
  "deploy": {
    "installCommand": "cd ../.. && npm ci",
    "buildCommand": "cd ../.. && npm run --workspace @laneharbor/backend build",
    "startCommand": "npm run start",
    "port": 8787,
    "healthcheckPath": "/healthz",
    "healthcheckTimeout": 300,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  },
  "env": {
    "NODE_ENV": "production",
    "PORT": "8787",
    "LH_ENABLE_API": "true",
    "LH_ENABLE_FRONTEND_SSR": "false",
    "LH_DATA_DIR": "./storage",
    "LH_DEFAULT_CHANNEL": "stable",
    "LH_FRONTEND_ORIGIN": "https://laneharbor.justarr.com",
    "LH_BASE_URL": "https://api.justarr.com"
  }
}
